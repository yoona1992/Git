
@{
    ViewBag.SourceFiles = "~/Models/CarInfoModel.cs";
    ViewBag.Title = "FormLayout/LayoutCarInfoEdit";
    var F = Html.F();
}
@model CCSIM.Web.Models.CarInfoModel
@section body {
    @(F.Form().ID("Form_CarEdit").LabelAlign(LabelAlign.Top).BodyPadding(10).ShowBorder(false).ShowHeader(false).LabelAlign(LabelAlign.Right).IsViewPort(true)
    .Items(
   F.TextBox().ID("Id").Text(Model.carInfo.Id.ToString()).Hidden(true),
   F.Panel().Layout(LayoutType.HBox).BoxConfigAlign(BoxLayoutAlign.Stretch).ShowHeader(false).ShowBorder(false)
                                .Items(
    F.TextBox().ID("VehicleNo").Text(Model.carInfo.VehicleNo).Required(true).ShowLabel(true).Label("<span style='color:red'>*</span>车牌号码").BoxFlex(1),
    F.DropDownListFor(m => m.vehicleType.DropDownList).ID("VehicleType").Required(true).ShowLabel(true).ShowRedStar(false).Label("<span style='color:red'>*</span>车辆类型").AutoSelectFirstItem(false).EmptyText("请选择车辆类型")
        .Items(Model.vehicleType.DropDownListItem.ToArray()).SelectedValue(Model.carInfo.VehicleType.ToString()).BoxFlex(1)
        ),
   F.Panel().Layout(LayoutType.HBox).BoxConfigAlign(BoxLayoutAlign.Stretch).ShowHeader(false).ShowBorder(false)
                                .Items(
    F.TextBox().ID("VehicleBrand").Text(Model.carInfo.VehicleBrand).Label("车辆品牌").BoxFlex(1),
    F.TextBox().ID("Owner").Text(Model.carInfo.Owner).Label("所有人").BoxFlex(1)
    ),
   F.Panel().Layout(LayoutType.HBox).BoxConfigAlign(BoxLayoutAlign.Stretch).ShowHeader(false).ShowBorder(false)
                                .Items(
    F.DropDownListFor(m => m.belongDept.DropDownList).ID("BelongDeptId").Required(true).ShowLabel(true).ShowRedStar(false).Label("<span style='color:red'>*</span>所属单位").AutoSelectFirstItem(false).EmptyText("请选择所属部门")
        .Items(Model.belongDept.DropDownListItem.ToArray()).SelectedValue(Model.carInfo.BelongDeptId.ToString()).BoxFlex(1),
    F.DropDownListFor(m => m.belongNet.DropDownList).ID("BelongNetId").Required(true).ShowLabel(true).ShowRedStar(false).Label("<span style='color:red'>*</span>所属网格").AutoSelectFirstItem(false).EmptyText("请选择所属网格")
        .Items(Model.belongNet.DropDownListItem.ToArray()).SelectedValue(Model.carInfo.BelongNetId.ToString()).BoxFlex(1)
        ),
    F.DropDownListFor(m => m.ownerType.DropDownList).ID("OwnerType").Required(true).ShowLabel(true).ShowRedStar(false).Label("<span style='color:red'>*</span>用车部门").AutoSelectFirstItem(false).EmptyText("请选择用车部门")
        .Items(Model.ownerType.DropDownListItem.ToArray()).SelectedValue(Model.carInfo.OwnerType.ToString()),
    F.TextBox().ID("Cldwzdsbh").Text(Model.carInfo.Cldwzdsbh).Label("终端识别号"),
    F.TextBox().ID("Wlwkhm").Text(Model.carInfo.Wlwkhm).Label("物联网卡号码"),
    F.TextArea().ID("Remark").Text(Model.carInfo.Remark).Height(160).Label("备注")
    )
    .Toolbars(
    F.Toolbar().ID("Toolbar").ToolbarAlign(ToolbarAlign.Right).Position(ToolbarPosition.Bottom)
    .Items(
    F.Button().ID("btnSave").Text("保存").IconFont(IconFont._Save).OnClick(Url.Action("btnSave_Click"), "Form_CarEdit").ValidateForms("Form_CarEdit")
    )
    )
    )
}

@section script {
    <script src="~/res/js/grid.js"></script>
}
